#:kivy 1.10.0

<OptionsScreen>

	name: "options"
	
	MenuBoxLayout:
					
		StorylineLabel:
			text: "Options"
			font_size: self.height*0.4
			halign: 'center'

		MenuButton:
		    text: "Theme"
		    on_release:
		        root.changeTheme()

	    MenuButton:
	        text: "Sound"
	        on_release:
	            root.adjustSound()

		MainMenuButton:

<ThemesPopup>

    themesPopupLayout: themes_pop

    MenuBoxLayout:
	    id: themes_pop

<SoundPopup>

    soundPopupLayout: sound_pop
    soundLabel: sound_label

    MenuBoxLayout:
        id: sound_pop

        StorylineLabel:
            id: sound_label
            font_size: self.height/10


<MuteButton>
    on_press: self.muteSound()



